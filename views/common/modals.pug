//- Login
.modal.fade(id='login_modal', tabindex='-1', role='dialog')
  .modal-dialog
    .modal-cell
      .modal-content
        .modal-body
          .row
            .col-md-12
              .social_logins
                a.facebook(href='http://localhost:3000/auth/facebook')
                  i.icon.social_facebook
                  |  Log in with Facebook
                a.google(href='http://localhost:3000/auth/google')
                  i.icon.social_googleplus
                  |  Log in with Google
              span.or or
              form(role='form', method='post', action='#')
                .form-group.boxed
                  label.sr-only(for='login_email') Email Address
                  i.icon.icon_mail_alt
                  input#login_email.form-control(type='email', placeholder='Email Address')
                .form-group.boxed
                  label.sr-only(for='login_password') Password
                  i.icon.icon_lock_alt
                  input#login_password.form-control(type='password', placeholder='Password')
                .form-group
                  .left
                    label
                      input(type='checkbox')
                      |  Remember me
                  .right
                    a(href='#') Forget password?
                  .clearfix
                .form-group
                  a.btn.btn-primary.btn-block.submit Log In
            .bottom.text-center
              | New here?&nbsp;&nbsp;
              a(href='#')
                b Sign Up

//- Signup
.modal.fade(id='signup_modal', tabindex='-1', role='dialog')
  .modal-dialog
    .modal-cell
      .modal-content
        .modal-body
          .row
            .col-md-12
              .social_logins
                a.facebook(href='http://localhost:3000/auth/facebook')
                  i.icon.social_facebook
                  |  Sign up with Facebook
                a.google(href='http://localhost:3000/auth/google')
                  i.icon.social_googleplus
                  |  Sign up with Google
              span.or or
              form(role='form', method='post', action='#')
                .form-group.boxed
                  label.sr-only(for='signup_first_name') First Name
                  i.icon.icon_profile
                  input#signup_first_name.form-control(type='text', placeholder='First Name')
                .form-group.boxed
                  label.sr-only(for='signup_last_name') Last Name
                  i.icon.icon_profile
                  input#signup_last_name.form-control(type='text', placeholder='Last Name')
                .form-group.boxed
                  label.sr-only(for='signup_email') Email Address
                  i.icon.icon_mail_alt
                  input#signup_email.form-control(type='email', placeholder='Email Address')
                .form-group.boxed
                  label.sr-only(for='signup_password') Password
                  i.icon.icon_lock_alt
                  input#signup_password.form-control(type='password', placeholder='Password')
                .form-group
                  .left
                    label
                      input(type='checkbox', checked)
                      |  I'd like to receive promotions and updates about Oiika
                  .clearfix
                .form-group
                  a.btn.btn-warning.btn-block.submit Sign Up
            .bottom.text-center
              | Already a member?&nbsp;&nbsp;
              a(href='#')
                b Log In
